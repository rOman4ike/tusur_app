<div class="current-exam">
  <% @exams.each do |exam| %>
    <div class="current-exam-block" data-item_id="<%= exam.id %>">
      <%= simple_form_for exam, remote: true do |f| %>
        <div class="row">
          <%= f.input :subject, collection: @collectionSubjects, label: "Предмет" %>
          <%= f.input :points, input_html: { min: '0', max: '100' }, label: "Балл" %>

          <div class="sub-row">
            <div class="btn-block">
              <button class="btn secondary-btn deleteForm">Удалить</button>
            </div>
            <div class="btn-block">
              <%= f.submit "Обновить", method: :patch, class: "btn secondary-btn" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>