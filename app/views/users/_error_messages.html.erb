<% if @user.errors.any? %> 
  <div id="error-explanation">
    <div class="alert alert-danger">
      <strong>Количечество ошибок в форме: <%= @user.errors.count %>.</strong>
      <ul>
        <% @user.errors.each do |attr, msg| %>
          <li>
            • <strong><%= inputName(attr) %></strong>: <%= msg %>
          </li> 
        <% end %>
      </ul>
    </div>
  </div> 
<% end %>