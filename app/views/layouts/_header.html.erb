<header class="header">
  <div class="container">
    <div class="header-inner">
      <div class="logo">
        <%= image_tag 'logo' %>
      </div>

      <nav>
        <ul class="navbar">
          <%= render "layouts/nav_link" %>
        </ul>
      </nav>

      <div class="burger">
        <%= image_tag 'burger' %>
        <div class="dropdown-block">
          <ul class="dropdown-menu">
            <%= render "layouts/nav_link" %>
          </ul>
        </div>
      </div>
      
    </div>
  </div>
</header>